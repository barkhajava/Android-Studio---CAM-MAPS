<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/map">
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_4"
        android:text="View Achievements"

        android:onClick="startActivityRewards"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_5"
        android:backgroundTint="#7999FF"
        android:text="@string/button3_text" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/camera"
        android:layout_alignLeft="@+id/button_3"/>


    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:text="View Your Map"
        android:onClick="startActivityMaps"
        android:backgroundTint="#7999FF"
        android:layout_centerHorizontal="true" />



    </RelativeLayout>
